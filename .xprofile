# screen saver and screen off
xset s on
xset s 1800
xset dpms 2000 2000 2000 

# set primary monitor
mons --primary eDP1

# by default duplicate screen to external monitor
mons -a -x "/home/joseph/bin/autoconfigure_monitors.sh"

# key repeat rate
xset r rate 400

# layouts
setxkbmap -layout de -variant nodeadkeys

# start programs in every x session
xbanish &           # no mouse when not needed
xss-lock slock &    # screen saver program
nextcloud &         # nextcloud sync
/usr/bin/dunst &    # notification server
nm-applet &         # network applet in systray
